{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "jsx": "react",

    /* Modules */
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist/",

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/"],
  "exclude": ["node_modules", "lib"]
}
